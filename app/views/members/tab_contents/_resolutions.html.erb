<p class="text-muted mb-1">Records Count: <%= @results.count %></p>
<table class="table">
	<tbody>
    <% resolutions.each do |resolution| %>
    	<tr>
            <td class="col-md-2"><%= resolution.number %></td>
            <td><%= resolution.title %></td>
    		<td>
                <% resolution.documents.each do |document| %>
                <%= link_to resolution.name, resolution_path(id: resolution.id) %>
                <% end %>   
            </td>
    	</tr>
    <% end %>
  </tbody>
</table>
<center><%= paginate resolutions, :window => 1 %></center>
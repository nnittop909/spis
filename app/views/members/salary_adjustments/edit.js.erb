$("#remote-modal").find(".modal-content").html("<%= escape_javascript(render 'edit', remote: true) %>");
$("#remote-modal").modal();
$(document).ready(function() {
  var datedAt = new Date(<%= @salary_adjustment.dated_at.present? ? @salary_adjustment.dated_at.strftime("%Y, %m-1, %d") : Date.today.strftime("%Y, 0, 1") %>);
  var eDate = new Date(<%= @salary_adjustment.effectivity_date.present? ? @salary_adjustment.effectivity_date.strftime("%Y, %m-1, %d") : Date.today.strftime("%Y, 0, 1") %>);
  $('.dated_at').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d",
    defaultDate: datedAt
  });
  $('.effDate').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d",
    defaultDate: eDate
  });
});
$("#remote-modal").find(".modal-content").html("<%= escape_javascript(render 'new', remote: true) %>");
$("#remote-modal").modal();

$(document).ready(function() {
  var datedAt = new Date(<%= Date.today.strftime("%Y, 0, 1") %>);
  var eDate = new Date(<%= Date.today.strftime("%Y, 0, 1") %>);
  $('.dated_at').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d",
    defaultDate: datedAt
  });
  $('.effDate').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d",
    defaultDate: eDate
  });
});
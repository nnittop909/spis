<div class="modal-header">
  <h5 class="modal-title">New Committee</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% remote ||= false %>
<%= simple_form_for @committee, validate: true, html: { autocomplete: "off" }, remote: remote, url: committees_path(), method: :post do |f| %>
  <%= render 'form', f: f %>
<% end %>
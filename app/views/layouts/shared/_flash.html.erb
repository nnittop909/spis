<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div id="notification" class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&nbsp &times;</button>
      <%= content_tag :div, (msg.to_s.gsub(/\n/, '<br/>').html_safe), :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
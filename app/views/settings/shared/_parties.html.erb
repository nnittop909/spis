<div class="row">
	<div class="col-md-6">
		<h6 class="m-0 font-weight-bold">Political Parties</h6>
	</div>
	<div class="col-md-6">
		<%= link_to "New Party", new_settings_political_party_path, class: "btn btn-outline-success float-right", remote: true, data: { toggle: "modal", target: '#remote-modal', backdrop: 'static', keyboard: false } %>
	</div>
</div>
<div class="table-responsive">
  <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
  	<table class="table">
      <tbody>
      	<% @political_parties.each do |political_party| %>
      		<tr>
      			<td><%= political_party.name %></td>
      			<td><%= political_party.code %></td>
      			<td class="text-right"><%= link_to "Edit", edit_settings_political_party_path(id: political_party.id), remote: true, data: { toggle: "modal", target: '#remote-modal', backdrop: 'static', keyboard: false } %></td>
      		</tr>
      	<% end %>
      </tbody>
    </table>
  </div>
</div>
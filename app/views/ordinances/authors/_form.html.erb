<%= simple_form_for @authorship, html: { autocomplete: "off"}, url: @authorship.persisted? ? ordinance_author_path(ordinance_id: @ordinance.id, id: @authorship.id) : ordinance_authors_path(ordinance_id: @ordinance.id), method: @authorship.persisted? ? :patch : :post do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :author_id, label: 'Author', collection: Member.all.map{|m| [m.name, m.id]}, input_html: {id: "authorSelect"} %>
  <%= f.input :role, label: "Author Type", collection: Authorship.roles.keys.to_a.map{ |a| [a.titleize, a]} %>
  <%= f.input :author_type, input_html: {value: "Member"}, as: :hidden %>

  <%= f.submit "Save", class: "btn btn-outline-success float-right", data: { disable_with: "Processing..." } %>
<% end %>

<script type="text/javascript">
  $( "#authorSelect" ).select2({
    theme: "bootstrap",
    width: '100%'
  });
</script>
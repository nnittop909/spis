$("#remote-modal").find(".modal-dialog").addClass("modal-xl")
$("#remote-modal").find(".modal-content").html("<%= escape_javascript(render 'new', remote: true) %>");
$("#remote-modal").modal();

$(document).ready(function() {
  $('.datepicker').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d"
  });

  $('.sameAsApproved').change(function(){
    if ($(this).is(':checked')) {
      $('.effectDate').hide();
      $('.effectDate').val($('.dateApproved').val());
    } else {
      $('.effectDate').show();
    }
  }).trigger('change');
});
<div class="card-body">
  <%= f.error_notification %>
  <%= f.input :role, input_html: {value: @user.role}, as: :hidden %>
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
</div>
<div class="modal-footer">
  <%= f.submit "Save", class: "btn btn-outline-success float-right", data: { disable_with: "Processing..." } %>
</div>
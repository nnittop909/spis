<div class="card-body">
  <%= f.error_notification %>
  <%= f.input :role, collection: User.roles.keys.to_a.map{|r| [r.titleize, r]}, as: :radio_buttons, checked: @user.role %>
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
</div>
<div class="modal-footer">
  <%= f.submit "Save", class: "btn btn-outline-success float-right", data: { disable_with: "Processing..." } %>
</div>
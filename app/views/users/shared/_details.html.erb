<div class="d-block ml-3 mb-2">
	<% if @user.avatar.attached? %>
		<%= image_tag(@user.avatar, height: 150, width: 150, class: "img-profile rounded-circle mx-auto my-auto d-block") %>
	<% else %>
		<%= image_tag('default', height: 150, width: 150, class: "img-profile rounded-circle mx-auto my-auto d-block") %>
	<% end %>
</div>
<div class="d-block ml-3">
	<table class="table">
		<tr>
			<td class="py-2 text-muted">Name:</td>
			<td class="py-2"><%= @user.full_name %></td>
		</tr>
		<tr>
			<td class="py-2 text-muted">Role:</td>
			<td class="py-2"><%= @user.role.titleize %></td>
		</tr>
		<tr>
			<td class="py-2 text-muted">Username:</td>
			<td class="py-2"><%= @user.username %></td>
		</tr>
		<tr>
			<td class="py-2 text-muted">Email:</td>
			<td class="py-2"><%= @user.email %></td>
		</tr>
		<tr>
			<td class="py-2 text-muted">Office:</td>
			<td class="py-2"><%= @user.office.name %></td>
		</tr>
	</table>
</div>

<div class="card my-3">
	<div class="card-body">
		<div class="row">
			<div class="col-md-10">
				<h4 class="card-title mb-2">User Profile</h4>
				<p class="text-muted">Update system user info!</p>
			</div>
			<div class="col-md-2">
				<%= link_to "Update", edit_user_path(@user), class: "btn btn-outline-danger float-right", data: {modal: true} %>
			</div>
		</div>
	</div>
</div>
<div class="card my-3">
	<div class="card-body">
		<%= simple_form_for @user, html: { multipart: true}, url: user_avatar_path(user_id: @user.id, id: @user.id) do |f| %>
			<div class="row">
				<div class="col-md-10">
					<h4 class="card-title">Profile Photo</h4>
					<%= f.input :avatar, as: :file, label: false, input_html: { class: 'center-block' }, multipart: true %>
				</div>
				<div class="col-md-2">
					<%= f.submit "Update", class: 'btn btn-outline-danger float-right' %>
				</div>
			</div>
    <% end %>
	</div>
</div>
<div class="card my-3">
	<div class="card-body">
		<div class="row">
			<div class="col-md-10">
				<h4 class="card-title mb-2">Email / Password</h4>
				<p class="text-muted">Update email and password! </p>
			</div>
			<div class="col-md-2">
				<%= link_to "Update", edit_user_account_path(user_id: @user.id, id: @user.id), class: "btn btn-outline-danger float-right", data: {modal: true} %>
			</div>
		</div>
	</div>
</div>
<% if @user.default_password.present? %>
	<div class="card my-3">
		<div class="card-body">
			<div class="row">
				<div class="col-md-10">
					<h4 class="card-title mb-2">Default Password</h4>
				</div>
				<div class="col-md-2">
					
				</div>
			</div>
			<h4 class="text-muted"><%= @user.default_password %></h4>
		</div>
	</div>
<% end %>

<%= simple_form_for user, html: { autocomplete: "off" }, url: user_path, method: :patch, data: { turbo: true } do |f| %>
  <%= f.error_notification %>
  <%= f.input :role, collection: User.roles.keys.to_a.map{|r| [r.titleize, r]}, as: :radio_buttons, checked: user.role %>
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.submit "Save", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
<% end %>
<div class="modal-header">
  <h5 class="modal-title">Update Resolution</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% remote ||= false %>
<%= simple_form_for @resolution, html: { autocomplete: "off"}, url: resolution_path(@resolution), method: :patch do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :number %>
      </div>
      <div class="col-md-6">
        <%= f.input :date, as: :string, label: "Date Received", placeholder: "Select date...", input_html: { class: "datepicker" } %>
      </div>
    </div>
    <%= f.input :title, as: :text, input_html: {rows: 4} %>
    <%= f.input :category_id, collection: Category.all.map{ |a| [a, a.id]} %>
    <%= f.input :remarks, as: :text %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save", class: "btn btn-outline-success float-right", data: { disable_with: "Processing..." } %>
  </div>
<% end %>

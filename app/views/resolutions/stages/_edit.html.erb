<div class="modal-header">
  <h5 class="modal-title">Update Resolution Stage</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% remote ||= false %>
<%= simple_form_for @stage, html: { autocomplete: "off"}, remote: remote, url: resolution_stage_path(resolution_id: @resolution.id, id: @stage.id), method: :patch do |f| %>
  <%= render 'form', f: f %>
<% end %>
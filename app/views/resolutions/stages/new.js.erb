$("#remote-modal").find(".modal-content").html("<%= escape_javascript(render 'new', resolution: @resolution, stage: @stage, remote: true) %>");
$("#remote-modal").modal();

$(document).ready(function() {
  var defDate = new Date(<%= @stage.date.present? ? @stage.date.strftime("%Y, %m-1, %d") : Date.today.strftime("%Y, %m-1, %d") %>);
  var enactDate = new Date(<%= @stage.effectivity_date.present? ? @stage.effectivity_date.strftime("%Y, %m-1, %d") : Date.today.strftime("%Y, %m-1, %d") %>);
  $('.datePickerNoValue').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d"
  });
  $('.dateEnacted').flatpickr({
    altInput: true,
    altFormat: "F j, Y",
    dateFormat: "Y-m-d"
  });
});
<div class="modal-header">
  <h5 class="modal-title">New Resolution Author</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% remote ||= false %>
<%= simple_form_for @authorship, html: { autocomplete: "off"}, remote: remote, url: resolution_authors_path(resolution_id: @resolution.id), method: :post do |f| %>
  <%= render 'form', f: f %>
<% end %>